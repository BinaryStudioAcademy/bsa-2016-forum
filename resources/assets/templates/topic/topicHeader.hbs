<div class="topic-comment-flex">
    <div class="topic-bar hidden-xs">
        <div class="topic-avatar topic-avatar-border">
           {{#if meta.user.url_avatar}}<img src={{meta.user.url_avatar}}>{{else}}<img src="images/user.png">{{/if}}
        </div>
        <div class="topic-addition">
        </div>
    </div>
    <div class="topic-body">
        <div class="topic-header">
            <h4>{{ model.name }}</h4>
        </div>
        <div class="topic-msg">
            <p> {{{ model.generated_description }}}</p>
        </div>
        <span>
            Category: <a href="#categories/{{model.category.slug}}/topics">{{ model.category.name }}</a>
        </span>
        <div class="topic-tags">
            {{#each model.tags}}
                <a href="#topics/tags/{{name}}">
                    <div class="tag">
                       <span>{{name}}</span>
                    </div>
                </a>
            {{/each}}
        </div>
    </div>
</div>
<div class="topic-control">
    <div class="topic-bar hidden-xs"></div>
    <div class="topic-history topic-history-creator">{{ createdDate }} {{ meta.user.first_name }} {{ meta.user.last_name }}</div>
    <div class="topic-control-btn">
        <a href="#votes/createPrivateVoteBasedOnTopicSubscribers/{{model.id}}" class="topic-edit-btn">Create Private Voting Based On Topic Subscribers</a>
        <a class="topic-edit-btn">Edit</a>
        {{#if canDelete}}
            <a class="topic-btn topic-delete-btn">Delete</a>
        {{/if}}
        <a class="topic-answer-btn">Answer</a>
        <button class="bookmark-btn text-info">Bookmark</button>
        <button class="subscribe-btn text-info">Subscribe</button>
        {{#ifCond meta.user.id '!=' meta.currentUser}}
            <span class="link-like-unlike fontOfLikeIcon"><i class="{{ style }}"></i>{{ likeUnlike }}({{ countOfLikes }})</span>
        {{else}}
            <span class="link-like-unlike-simple fontOfLikeIcon"><i class="{{ style }}"></i>Likes({{ countOfLikes }})</span>
        {{/ifCond}}
        </div>
</div>
