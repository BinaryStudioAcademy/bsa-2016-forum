<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
    <div class="category-title">
    <a href="#categories/{{ id }}/topics"> {{ name }} </a>
    <span class="topic-count"> (Total : {{topicCount}} topics)<span>
    <br>
    {{#if topicCount}}
    <span>Last topics:<span><br>
    {{/if}}
        {{#each lastThreeTopics}}
            <a href="#topics/{{ id }}"> {{ name }} </a>
            <span class="votes-item-time">Last update: {{updated_at}}</span>
            <br>
        {{/each}}
    </div>
</div>
