<form class="topic-form">
    <div class="topic-new-head">
        <h4>Create New Thread</h4>
    </div>
    <div id="categories">
        <div class="errors"></div>
    </div>
    <div class="topic-new-title form-group">
        <input type="text" placeholder="Enter Topic Title" name="name">
        <div class="errors"></div>
    </div>

    <div class="topic-new-slug form-group">
        <input type="text" placeholder="Enter your Sluggable Url or leave it empty for autogeneration" name="slug">
        <div class="errors"></div>
    </div>
    <div class="topic-new-body form-group" >
        <textarea rows="10" name="description"></textarea>
        <div class="errors"></div>

        <div class="form-group">
            <label for="tags">Tags:</label>
            <input type="text" class="tags" name="tags">
        </div>

        <div class="topic-new-attachment">
            <a class="openMarkdownHelp">Open Markdown Help </a>
        </div>
        <div class="topic-new-attachment">
            <a> Attach</a>
        </div>
    </div>
    <div class="topic-new-control">
        <!--
        <div class="topic-new-notification checkbox">
            <label><input type="checkbox" name="report_me">Report me when someone post a reply</label>
        </div>
        -->
        <div class="topic-new-submit">
            <input type="submit" value="Start Thread">
        </div>
    </div>

</form>