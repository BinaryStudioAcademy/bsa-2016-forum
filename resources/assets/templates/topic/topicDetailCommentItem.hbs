<div class="topic-comment-item">
    <div class="topic-comment-main">
        <div class="topic-comment-flex">
            <div class="topic-bar hidden-xs">
                <div class="topic-avatar">
                    <img src="/images/user.png">
                </div>
                <div class="topic-addition">

                </div>
            </div>
            <div class="topic-body">
                <div class="topic-msg">
                    <a href="{{ comment_url }}">{{ content_origin }}</a>
                </div>
            </div>
        </div>
        <div class="topic-control">
            <div class="topic-history-margin hidden-xs"></div>
            <div class="topic-history">{{ created_at }}</div>
            <div class="topic-history">{{ user }}</div>
            <div class="topic-history">Rating {{ rating }}</div>
            <div class="topic-control-btn">
                <a>Edit</a><a>Share</a><a>Reply</a><a>notification</a>
            </div>
        </div>
    </div>
