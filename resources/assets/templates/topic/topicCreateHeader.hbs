<div class="form-group">
    <label for="topic-name">Topic Name:</label>
    <input class="form-control" id="topic-name" type="text" placeholder="Enter Topic Title" name="name" value="{{ model.name }}">
    <div class="errors"></div>
</div>

<div class="form-group">
    <label for="topic-slug">Topic Slug:</label>
    <input class="form-control" id="topic-slug" type="text" placeholder="Enter your Sluggable Url or leave it empty for autogeneration" name="slug" value="{{ model.slug }}">
    <div class="errors"></div>
</div>

<div class="form-group">
    <label for="tags">Tags:</label>
    <input type="text" class="form-control tags" name="tags" value="{{ model.tags }}">
</div>

<div class="form-group">
    <label for="topic-description">Description:</label>
    <textarea class="form-control" id="topic-description" rows="10" name="description">{{ model.description }}</textarea>
    <div class="errors"></div>
    <div class="pull-left">
        <a class="btn-link openMarkdownHelp">Open Markdown Help</a>&nbsp;
        <a class="btn-link"> Attach</a>
    </div>
</div>
<div class="form-group">
    <!--
    <div class="topic-new-notification checkbox">
        <label><input type="checkbox" name="report_me">Report me when someone post a reply</label>
    </div>
    -->
</div>

<button class="btn btn-default pull-right" type="submit" value="Start Thread">{{#if model.id}} Save Changes {{else}} Start Thread {{/if}}</button>