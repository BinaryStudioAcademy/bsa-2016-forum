<div class="modal" id="commentdlg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            <h4 class="modal-title">{{ title }}</h4>
        </div>
        <div class="modal-body">
            <div class="alert alert-info errors hidden"></div>
            <form action="">
                <div class="form-group">
                    <textarea class="form-control text-field" rows="3" placeholder="Comment..." name="content_origin">{{ model.content_origin }}</textarea>
                    <a class="openMarkdownHelp">Open Markdown Help </a>
                </div>
                <div class="text-right form-group">
                    <button type="button" class="btn btn-default" data-toggle="collapse"
                            data-target=".dropzone-container">Attach</button>
                </div>
                <div class="collapse dropzone-container">
                    <div id="drop" class="dropzone"></div>
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <span class="loader hidden"><img src="images/comment-loader.gif" alt=""></span>
            <button class="btn btn-primary" id="submit">Save comment</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>

