{{#if meta.vote.is_single}}
    <div class="radio" >
        <label class="js-item-click">
            <input type="radio" class="js-select" name="optionsRadios" id="optionsRadios1" value="{{model.id}}" {{#if model.checked}} checked {{/if}}>
            {{ model.name }}
        </label>

    </div>

{{else}}
    <div class="checkbox">
        <label class="js-item-click">
            <input type="checkbox" class="js-select" value="{{model.id}}" {{#if model.checked}} checked {{/if}}>
            {{ model.name }}
        </label><br>
    </div>
{{/if}}