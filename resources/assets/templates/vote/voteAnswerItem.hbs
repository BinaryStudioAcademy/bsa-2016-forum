{{#if meta.vote.is_single}}
    <div class="radio">
        <label>
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1">
            {{ model.name }}
        </label>
        <button class="btn btn-success btn-sm js-show-answer-comments" type="button"><span class="glyphicon glyphicon-comment"></span></button>
    </div>

{{else}}
    <div class="checkbox">
        <label>
            <input type="checkbox" value="">
            {{ model.name }}
        </label>
        <button class="btn btn-success btn-sm js-show-answer-comments" type="button"><span class="glyphicon glyphicon-comment"></span></button>
    </div>
{{/if}}