<div class="row new-vote">
    <div class="span12">
        <div class="widget widget-nopad">
            <div class="widget-header">
                <i class="fa fa-file"></i>
                <h3>Create vote</h3>
            </div>
            <div class="widget-content">
                <div class="form-padding">

                    <div class="vote-new-head"></div>

                    <div class="vote-new-answers">
                        <div class="form-group">
                            <label for="usr">Answers:</label>
                            <div id="vote-answers"></div>
                            <button type="button" class="btn btn-default" id="addAnswer">
                                <i class="fa fa-plus" aria-hidden="true"></i> Add Answer
                            </button>
                        </div>
                    </div>

                    <div class="form-group vote-new-access overflow-hidden">
                        <div class="col-lg-6 col-md-6 col-xs-12">
                            <div class="widget widget-nopad">
                                <div class="widget-header"> <i class="fa fa-check"></i>
                                    <h3>Accessed</h3>
                                    <div class="pull-right">
                                        <button type="button" class="btn btn-info js-to-accessed">Move all users to accessed</button>
                                    </div>
                                </div>
                                <!-- /widget-header -->
                                <div class="widget-content" id="vote-access-users"></div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-xs-12">
                            <div class="widget widget-nopad">
                                <div class="widget-header"> <i class="fa fa-ban"></i>
                                    <h3>Not accessed</h3>
                                    <div class="pull-right">
                                        <button type="button" class="btn btn-info js-to-not-accessed">Move all users to not accessed</button>
                                    </div>
                                </div>
                                <!-- /widget-header -->
                                <div class="widget-content" id="vote-new-addUsers"></div>
                            </div>
                        </div>
                    </div>

                    <div class="overflow-hidden">
                        <!--<div class="vote-new-notification checkbox">-->
                        <!--<label><input type="checkbox">Report me when someone leave a comment</label>-->
                        <!--</div>-->
                        <div class="pull-right">
                            <button id="delete" type="button" class="btn btn-danger">Delete Vote</button>
                            <button id="start" type="button" class="btn btn-success">Start Vote</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<div id="noAnswersModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Not enouph vote answers to save vote</h4>
            </div>
            <div class="modal-body">
                <p>Two or more vote answers needed to save vote</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>