<div class="message-msg-item">
    <!-- addition class 'to' or 'from' to mark msg direction -->
    <div class="message-item-container {{messageDirection}}">
        <div class="message-msg-avatar">
            <!-- message owner avatar -->
            <img src="/images/user.png">
        </div>
        <div class="message-msg-body {{deleted}}">
            <p><b>{{user_name}}</b></p>
            <p>{{message.message}}</p>
            <span>{{edit_at}} {{message.updated_at}}</span>
            <div><a class="edit">Edit</a>&nbsp;<a class="delete">Delete</a></div>
        </div>
    </div>
</div>