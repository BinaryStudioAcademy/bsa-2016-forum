<div class="messages-user-item">
    <a href="#messages/user/{{user.id}}">
        <div class="messages-msg-avatar hidden-xs">
            <!-- from msg avatar -->
            <img src="/images/user.png">
        </div>
        <div class="messages-msg">
            <span>{{user.first_name}} {{user.last_name}}</span>
            <!-- if unread add class .unread -->
            <div class="messages-msg-body">
                <div>
                    <p>{{message.message}}</p>
                </div>
            </div>
            <i>{{message.updated_at}}</i>
        </div>
    </a>
</div>